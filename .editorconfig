root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true

[Makefile]
indent_style = tab

[*.pbtxt]
indent_size = 2

[{*.tf,*.tfvars}]
indent_size = 2

[{*.yaml,*.yml,*.yaml.gotmpl,*.yml.gotmpl}]
indent_size = 2
